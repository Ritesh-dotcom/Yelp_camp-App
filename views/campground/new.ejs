<%- include("../partials/header") %>


<div class="container mt-5" style="width: 30%">
	<div>
		<div>
			<h3>Create a new Campground</h3>
		</div>
		<div class="mt-4">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<label for="exampleInputEmail1">Name Of Image</label>
					<input  class="form-control" type="text" id="exampleInputEmail1" name="name" placeholder="name">
				</div>
				<div class="form-group">
					<label for="exampleInputPassword1">Image URL</label>
					<input  class="form-control" type="text" id="exampleInputPassword1" name="url" placeholder="imageurl">
				</div
				<div class="form-group">
					<label for="price">Price</label>
					<input  class="form-control" type="number" id="price" name="price" placeholder="price" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<label for="description1">Give Your View</label>
					<input  class="form-control" type="text" id="description1" name="description" placeholder="Describe">
				</div>
				<button  type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>