<%- include("../partials/header") %>


<div class="container mt-5" style="width: 30%">
	<div>
		<div>
			<h3>Add a new Comment <%= campg.name%></h3>
		</div>
		<div class="mt-4">
			<form action="/campgrounds/<%= campg._id %>/comments" method="POST">
				<div class="form-group">
					<label for="exampleInputEmail1">Comment</label>
					<input  class="form-control" type="text" id="exampleInputEmail1" name="comment[text]" placeholder="Enter a Comment">
				</div>
				<button  type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>